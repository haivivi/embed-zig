# ADC Button App - Shared sources

load("//bazel:data.bzl", "data_select")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "app_srcs",
    srcs = glob(["*.zig"]),
)

# Data files with variant selection
# First option (tiga) is the default
# Usage: --//bazel:data=zero (to override)
data_select(
    name = "data_files",
    options = {
        "tiga": glob(["data/tiga/**"]),
        # "zero": glob(["data/zero/**"]),  # add more variants as needed
    },
)
