load("//bazel/bk:defs.bzl", "bk_flash", "bk_modules", "bk_zig_app")
load("//bazel/bk/kconfig:defs.bzl", "bk_config", "bk_pwm")
load("//bazel/bk/partition:presets.bzl", "bk7258_default_partitions")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = [
        "//examples/apps/gpio_button:app_srcs",
    ] + glob(["**/*"]),
)

bk_pwm(name = "pwm")
bk_config(name = "kconfig", modules = [":pwm"])

bk7258_default_partitions()
bk_modules()

bk_zig_app(
    name = "app",
    ap = ":srcs",
    cp = "//lib/platform/bk/cp:base",
    deps = [":bk", "//lib/hal", "//lib/trait"],
    partition_table = ":partitions",
    c_helpers = [
        "//lib/platform/bk/armino:c_helpers_core",
        "//lib/platform/bk/armino:c_helpers_gpio",
        "//lib/platform/bk/armino:c_helpers_pwm",
    ],
    kconfig_ap = ":kconfig",
)

bk_flash(name = "flash", app = ":app")
