# Hello BK7258 - BK Platform

load("//bazel/bk:defs.bzl", "bk_modules", "bk_flash", "bk_zig_app")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = [
        "//examples/apps/hello_bk:app_srcs",
    ] + glob(["**/*"]),
)

bk_modules()

bk_zig_app(
    name = "app",
    app = ":srcs",
    deps = [":bk"],
    c_helpers = ["//lib/platform/bk/armino:c_helpers_core"],
)

bk_flash(
    name = "flash",
    app = ":app",
)
