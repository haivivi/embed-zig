# HTTPS Speed Test - ESP Platform (using pure Zig TLS + DNS)

load("//bazel:env.bzl", "make_env_file")
load("//bazel/esp:defs.bzl", "esp_flash", "esp_zig_app")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = [
        "//examples/apps/https_speed_test:app_srcs",
    ] + glob(["**/*"]),
)

# Environment from command line
make_env_file(
    name = "env",
    defines = ["WIFI_SSID", "WIFI_PASSWORD", "TEST_SERVER"],
)

esp_zig_app(
    name = "app",
    app = ":srcs",
    boards = ["esp32s3_devkit"],
    requires = ["esp_wifi", "esp_event", "esp_netif", "nvs_flash", "lwip", "mbedtls"],
    force_link = [
        "${WIFI_FORCE_LINK}",
        "${NET_FORCE_LINK}",
        "${EVENT_FORCE_LINK}",
        "verify_with_esp_bundle",
    ],
    extra_cmake = [
        "include(${_ESP_LIB}/platform/esp/idf/src/wifi/wifi.cmake)",
        "include(${_ESP_LIB}/platform/esp/idf/src/mbed_tls/mbed_tls.cmake)",
        "include(${_ESP_LIB}/platform/esp/idf/src/net/net.cmake)",
        "include(${_ESP_LIB}/platform/esp/idf/src/event/event.cmake)",
    ],
    extra_c_sources = ["WIFI_C_SOURCES", "MBED_TLS_C_SOURCES", "NET_C_SOURCES", "EVENT_SRCS"],
    deps = ["//lib/hal", "//lib/trait", "//lib/pkg/tls", "//lib/pkg/dns", "//lib/pkg/http", "//lib/pkg/motion", "//lib/pkg/math"],
    sdkconfig = "//examples/esp:esp32s3_wifi_xip_mbedtls_fast",
    app_config = "//examples/esp:app",
    env = ":env",
)

esp_flash(
    name = "flash",
    app = ":app",
)
