# Memory Attribute Test - ESP Platform
# Tests PSRAM, IRAM, DRAM memory placement - no HAL dependency

load("//bazel/esp:defs.bzl", "esp_modules", "esp_flash", "esp_zig_app")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = [
        "//examples/apps/memory_attr_test:app_srcs",
    ] + glob(["**/*"]),
)

esp_modules()

esp_zig_app(
    name = "app",
    app = ":srcs",
    requires = ["driver"],
    deps = [":idf", ":esp",
 "//lib/hal", "//lib/trait", "//lib/pkg/motion", "//lib/pkg/math"],
    sdkconfig = "//examples/esp:esp32s3",
    app_config = "//examples/esp:app",
)

esp_flash(
    name = "flash",
    app = ":app",
)
