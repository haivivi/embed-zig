# Mic Test App

load("//bazel/esp:defs.bzl", "esp_zig_app", "esp_flash")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = glob(["**/*"]),
)

esp_zig_app(
    name = "esp",
    app = ":srcs",
    requires = ["driver", "esp_driver_i2s", "esp_driver_gpio", "esp_driver_i2c"],
    force_link = [
        "${MIC_FORCE_LINK}",
        "${I2C_FORCE_LINK}",
    ],
    extra_cmake = [
        "include(${_ESP_LIB}/esp/src/mic/mic.cmake)",
        "include(${_ESP_LIB}/esp/src/sal/i2c.cmake)",
    ],
    extra_c_sources = ["MIC_C_SOURCES", "I2C_C_SOURCES"],
    extra_deps = ["hal", "drivers", "trait"],
    sdkconfig = "//examples/esp:esp32s3",
    app_config = "//examples/esp:app",
)

esp_flash(
    name = "flash",
    app = ":esp",
)
