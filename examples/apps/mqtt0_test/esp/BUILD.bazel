# mqtt0 Freestanding Test - ESP Platform

load("//bazel:env.bzl", "make_env_file")
load("//bazel/esp:defs.bzl", "esp_modules", "esp_flash", "esp_zig_app")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = [
        "//examples/apps/mqtt0_test:app_srcs",
    ] + glob(["**/*"]),
)

# Environment from command line
make_env_file(
    name = "env",
    defines = ["WIFI_SSID", "WIFI_PASSWORD", "MQTT_BROKER_HOST", "MQTT_BROKER_PORT"],
)

esp_modules()

esp_zig_app(
    name = "app",
    app = ":srcs",
    boards = ["esp32s3_devkit"],
    requires = ["esp_wifi", "esp_event", "esp_netif", "nvs_flash"],
    force_link = [
        "${EVENT_FORCE_LINK}",
        "${WIFI_FORCE_LINK}",
        "${NET_FORCE_LINK}",
    ],
    extra_cmake = [
        "include(${_ESP_LIB}/platform/esp/idf/src/event/event.cmake)",
        "include(${_ESP_LIB}/platform/esp/idf/src/wifi/wifi.cmake)",
        "include(${_ESP_LIB}/platform/esp/idf/src/net/net.cmake)",
    ],
    extra_c_sources = ["EVENT_SRCS", "WIFI_C_SOURCES", "NET_C_SOURCES"],
    deps = [
        ":idf",
        ":esp",
        "//lib/hal",
        "//lib/trait",
        "//lib/pkg/mqtt0",
        "//lib/pkg/math",
        "//lib/pkg/motion",
    ],
    sdkconfig = "//examples/esp:esp32s3_wifi",
    app_config = "//examples/esp:app_internal",
    env = ":env",
)

esp_flash(
    name = "flash",
    app = ":app",
)
