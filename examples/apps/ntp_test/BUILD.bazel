# NTP Test App

load("//bazel/esp:defs.bzl", "esp_zig_app", "esp_flash")
load("//bazel:env.bzl", "make_env_file")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = glob(["**/*"]),
)

# Environment from command line (with defaults from AGENTS.md)
make_env_file(
    name = "env",
    defines = ["WIFI_SSID", "WIFI_PASSWORD"],
    defaults = {
        "WIFI_SSID": "HAIVIVI-MFG",
        "WIFI_PASSWORD": "!haivivi",
    },
)

esp_zig_app(
    name = "esp",
    app = ":srcs",
    boards = ["esp32s3_devkit", "korvo2_v3"],
    requires = ["esp_wifi", "esp_event", "esp_netif", "nvs_flash", "lwip"],
    force_link = [
        "${EVENT_FORCE_LINK}",
        "${WIFI_FORCE_LINK}",
        "${NET_FORCE_LINK}",
    ],
    extra_cmake = [
        "include(${_ESP_LIB}/esp/idf/src/event/event.cmake)",
        "include(${_ESP_LIB}/esp/idf/src/wifi/wifi.cmake)",
        "include(${_ESP_LIB}/esp/idf/src/net/net.cmake)",
    ],
    extra_c_sources = ["EVENT_SRCS", "WIFI_C_SOURCES", "NET_C_SOURCES"],
    extra_deps = ["hal", "ntp"],
    sdkconfig = "//examples/esp:esp32s3_wifi_xip",
    app_config = "//examples/esp:app",
    env = ":env",
)

esp_flash(
    name = "flash",
    app = ":esp",
)
