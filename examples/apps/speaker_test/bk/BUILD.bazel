load("//bazel/bk:defs.bzl", "bk_flash", "bk_modules", "bk_zig_app")
load("//bazel/bk/kconfig:defs.bzl", "bk_audio", "bk_config")
load("//bazel/bk/partition:presets.bzl", "bk7258_default_partitions")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = ["//examples/apps/speaker_test:app_srcs"] + glob(["**/*"]),
)

bk_audio(name = "audio")
bk_config(name = "kconfig", modules = [":audio"])

bk7258_default_partitions()
bk_modules()

bk_zig_app(
    name = "app",
    ap = ":srcs",
    cp = "//lib/platform/bk/cp:base",
    deps = [":bk", "//lib/hal", "//lib/trait"],
    partition_table = ":partitions",
    c_helpers = [
        "//lib/platform/bk/armino:c_helpers_core",
        "//lib/platform/bk/armino:c_helpers_speaker",
    ],
    requires = ["bk_audio"],
    base_project = "audio_player_example",
    kconfig_ap = ":kconfig",
)

bk_flash(name = "flash", app = ":app")
