# WiFi Scan Test App
# Tests WiFi scanning functionality: scanStart, scan_done event, scanGetResults

load("//bazel/esp:defs.bzl", "esp_zig_app", "esp_flash")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "srcs",
    srcs = glob(["**/*"]),
)

esp_zig_app(
    name = "esp",
    app = ":srcs",
    requires = ["esp_wifi", "esp_event", "esp_netif", "nvs_flash", "lwip"],
    force_link = [
        "${WIFI_FORCE_LINK}",
        "${NET_FORCE_LINK}",
    ],
    extra_cmake = [
        "include(${_ESP_LIB}/esp/src/idf/wifi/wifi.cmake)",
        "include(${_ESP_LIB}/esp/src/idf/net/net.cmake)",
    ],
    extra_c_sources = ["WIFI_C_SOURCES", "NET_C_SOURCES"],
    extra_deps = ["hal"],
    sdkconfig = "//examples/esp:esp32s3_wifi_xip",
    app_config = "//examples/esp:app",
)

esp_flash(
    name = "flash",
    app = ":esp",
)
