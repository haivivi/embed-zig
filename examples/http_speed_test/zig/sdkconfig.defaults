# Enable PSRAM
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_ESP32S3_SPIRAM_SUPPORT=y

# WiFi
CONFIG_WIFI_SSID="HAIVIVI-MFG"
CONFIG_WIFI_PASSWORD="!haivivi"

# Test Server
CONFIG_TEST_SERVER_IP="192.168.1.7"
CONFIG_TEST_SERVER_PORT=8080

# HTTP Client
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=n
CONFIG_ESP_HTTP_CLIENT_ENABLE_BASIC_AUTH=n

# Disable unused
CONFIG_BT_ENABLED=n

# Increase task stack for HTTP
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# ============================================================================
# WiFi Optimizations for Speed
# ============================================================================
# Increase WiFi static RX buffer
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=16
# Increase WiFi dynamic RX buffer
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=64
# Increase WiFi TX buffer
CONFIG_ESP_WIFI_DYNAMIC_TX_BUFFER_NUM=64
# WiFi AMPDU settings
CONFIG_ESP_WIFI_RX_BA_WIN=16
CONFIG_ESP_WIFI_AMPDU_TX_ENABLED=y
CONFIG_ESP_WIFI_AMPDU_RX_ENABLED=y

# ============================================================================
# LWIP TCP Optimizations for Speed
# ============================================================================
# Increase TCP window size for higher throughput
CONFIG_LWIP_TCP_WND_DEFAULT=32768
CONFIG_LWIP_TCP_SND_BUF_DEFAULT=32768
CONFIG_LWIP_TCP_RECVMBOX_SIZE=32
# MSS
CONFIG_LWIP_TCP_MSS=1440
# Disable Nagle (faster small packets)
CONFIG_LWIP_TCP_NODELAY=y
# SO_REUSE
CONFIG_LWIP_SO_REUSE=y
