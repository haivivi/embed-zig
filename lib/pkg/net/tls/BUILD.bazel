load("//bazel/zig:defs.bzl", "zig_package")

package(default_visibility = ["//visibility:public"])

# test = False: kdf.zig's std HKDF wrapper has module resolution issues under Bazel test.
# Tests run fine with `zig test` directly (see concurrent test in client.zig).
zig_package(
    name = "tls",
    deps = [
        "//lib/pkg/crypto",
        "//lib/trait",
    ],
    test = False,
)

filegroup(name = "srcs", srcs = glob(["**/*"], exclude = ["test/**"]))
