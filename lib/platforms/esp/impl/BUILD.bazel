# ESP trait + hal implementations

package(default_visibility = ["//visibility:public"])

# Default target: all files (for zig_lib deps)
filegroup(
    name = "impl",
    srcs = glob(
        ["**/*"],
        exclude = [".zig-cache/**", "zig-out/**"],
    ),
)

# Legacy target (for backward compatibility)
filegroup(
    name = "impl_sources",
    srcs = glob(
        ["**/*.zig", "**/*.zon"],
        allow_empty = True,
        exclude = [".zig-cache/**", "zig-out/**"],
    ),
)
